<% @project.comments.each_with_index do |comment, index| %>
  <div class="comment-block">
    <%= comment.content %><br>
    <%= comment.user.name %><br>
      <span class="vote-visual-comment" id="<%= index %>">  <%= comment.votes.length %>  </span>
      <%= button_to "+1", comment_vote_path(comment) + '.json', "data-type" => :json, method: :post, class: "comment-project", remote: true %>

    <% if comment.user.id == session[:user_id] %>
      <%= link_to "Delete", admins_project_comment_path(@project, comment), method: :delete, remote: true, class: "comment_delete" %>
     <% end %>
  <br><br>
  </div>
<% end %>

