<%= render 'layouts/admins_header' %><br>

<%= link_to "Create a Project", new_project_path %> <br><br>
<div class="project-vote-block">
<%= button_to "Thumbs UP", project_vote_path + '.json', "data-type" => :json, method: :post, class: "vote-project", remote: true %>
</div>

<h1><%= @project.title %> - <span class="vote-visual"><%= @project.votes.length %> </span> Votes</h1>
<%= @project.description %><br><br>

<div class="new-comment-block">
<%= render 'layouts/comment_form' %>
</div>

<div id="comment-placement"></div>


<% @project.comments.each_with_index do |comment, index| %>
  <div class="comment-block">
    <%= comment.content %><br>
    <%= comment.user.name %><br>
    <% if comment.user.id == @user.id %>

    <span class="vote-visual-comment" id="<%= index %>">  <%= comment.votes.length %>  </span>

    <%= button_to "Like Comment", comment_vote_path(comment) + '.json', "data-type" => :json, method: :post, class: "comment-project", remote: true %>
  <%= link_to "Delete", admins_project_comment_path(@project, comment), method: :delete, :remote => true, :class => "comment_delete" %>
</div>

  <% end %><br><br>
<% end %>
