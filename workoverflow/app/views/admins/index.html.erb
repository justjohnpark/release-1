<%= render "layouts/admins_header" %>

<h2>Projects</h2>

<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Sort By <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Popularity", admin_popularity_sort_path, remote: true %></li>
    <li><%= link_to "Category", admin_sort_path(sort: "category"), remote: true, project: 'category' %></li>
    <li><%= link_to "Location", admin_sort_path(sort: "location"), remote: true, id: 'location' %></li>
    <li><%= link_to "Remote", admin_sort_path(sort: "remote"), remote: true %></li>
    <li><%= link_to "Recent", admin_sort_path(sort: "created_at"), remote: true %></li>
  </ul>
</div><br><br>

<div id="projects">
  <% @projects.reverse.each do |project| %>
    <%= link_to project.title, project_path(project) %> (<%= project.category %>)
  <div class="project-vote-block">
    <span class="vote-visual"><%= project.votes.length %> </span> Votes</h1>
    <%= button_to "+1", project_vote_path(project) + '.json', "data-type" => :json, method: :post, class: "vote-project", remote: true %>
  </div>
  <br>
  <% end %>
</div>
