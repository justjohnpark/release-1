<div id="home">
    <%= link_to "Home", root_path %>
</div>

<h1>Register</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div id="errors_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %>
      prohibited the user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div><br>
    <%= f.submit "Register" %>
  </div>
<% end %>
