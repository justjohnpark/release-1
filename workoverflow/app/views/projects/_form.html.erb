<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
  <div id="errors_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %>
      prohibited the project from being saved:</h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :time_estimation %><br>
    <%= f.text_field :time_estimation %>
  </div>

  <div>
    <%= f.check_box :remote %>
    <%= f.label(:remote, "Work Remotely?") %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
