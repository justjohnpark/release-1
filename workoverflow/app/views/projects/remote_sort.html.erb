<h3>Working Options</h3>
<% @projects.each do |array| %>
	<% if array[0] == "true" %>
		<h4>Remote</h4>
	<% else %>
		<h4>Not Remote</h4>
	<% end %>

	<% array[1].each do |project| %>
  	<%= link_to project[0].title, project_path(project[0]) %> (<%= project[0].category %>) - <%= project[0].votes.length %> Votes<br>
  <% end %>
<% end %>