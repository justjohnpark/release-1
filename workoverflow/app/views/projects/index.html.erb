<%= render "layouts/users_header" %>

<h2 id="projects_header">Projects</h2>

<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Sort By <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Popularity", popularity_sort_path, remote: true %></li>
    <li><%= link_to "Category", category_sort_path, remote: true %></li>
    <li><%= link_to "Location", location_sort_path, remote: true %></li>
    <li><%= link_to "Remote", remote_sort_path, remote: true %></li>
    <li><%= link_to "Recent", recent_sort_path, remote: true %></li>
  </ul>
</div>

<br>

<div id="projects">
  <% @projects.reverse.each do |project| %>
    <%= link_to project.title, project_path(project) %> (<%= project.category %>) - <%= project.votes.length %> Votes<br><br>
  <% end %>
</div>
