<%= render "layouts/users_header" %>

<h2>Current Projects</h2>

<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Sort By <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "popularity", "#" %></li>
    <li><%= link_to "category", "#"  %></li>
    <li><%= link_to "location", "#" %></li>
    <li><%= link_to "remote", "#" %></li>
    <li><%= link_to "recent", "#" %></li>
  </ul>
</div><br><br>

<div>
  <% @projects.each do |project| %>
    <%= link_to project.title, project_path(project) %> (<%= project.category %>) - <%= project.votes.length %> <br><br>
  <% end %>
</div>
