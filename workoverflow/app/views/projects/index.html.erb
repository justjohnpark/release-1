<%= render "layouts/users_header" %>

<h2 id="projects_header">Projects</h2>

<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Sort By <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Popularity", popularity_sort_path, remote: true %></li>
    <li><%= link_to "Category", sort_path(sort: "category"), remote: true, project: 'category' %></li>
    <li><%= link_to "Location", sort_path(sort: "location"), remote: true, id: 'location' %></li>
    <li><%= link_to "Remote", sort_path(sort: "remote"), remote: true %></li>
    <li><%= link_to "Recent", sort_path(sort: "created_at"), remote: true %></li>
  </ul>
</div>

<br>

<div id="projects">
  <% @projects.reverse.each do |project| %>
    <%= link_to project.title, project_path(project) %> (<%= project.category %>) - <%= project.votes.length %> Votes<br><br>
  <% end %>
</div>
